<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dailyObject"
            type="com.musala.weatherdetector.domain.model.weather.WeatherDaily" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_weather_daily_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@{dailyObject.weatherDailyDate}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp16w"
        tools:text="@string/weather_daily_day"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/sp12" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp40w"
        android:layout_height="@dimen/dp40w"
        tools:src="@drawable/ic_weather_cloud"
        imageUrl="@{dailyObject.weatherDailyIcon}"
        app:layout_constraintStart_toEndOf="@+id/tv_weather_daily_day"
        android:layout_marginStart="@dimen/dp8w"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_weather_daily_min_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_weather_daily_day"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dp16w"
        android:text="@{@string/weather_daily_min_max(dailyObject.weatherDailyMin,dailyObject.weatherDailyMax)}"
        tools:text="@string/weather_daily_min_max"
        android:textColor="@color/colorOnPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/sp15" />




</androidx.constraintlayout.widget.ConstraintLayout>

</layout>